<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Calculator 클래스로 calculator 객체 생성 -->
	<bean id="cal" class="com.ddu.test.Calculator" />
	
	<!-- Mycalculator 클래스로 Mycalculator 객체 생성 후 변수 초기값 설정 -->
	<bean id="mycalculator" class="com.ddu.test.Mycalculator" >
		<property name="a" value="10"></property>
		<property name="b" value="5"></property>
		<property name="calculator">
			<ref bean="cal"/>
		</property>
	</bean>
	
	<!-- setter를 이용한 객체 초기화 -->
	<bean id="studentDto" class="com.ddu.test.StudentDto">
		<property name="name" value="홍길동"></property>
		<property name="age" value="17"></property>
		<property name="gradeNum" value="4학년"></property>
		<property name="classNum" value="5반"></property>
	</bean>
	<bean id="studentDto2" class="com.ddu.test.StudentDto">
		<constructor-arg >
			<value>이순신</value>
		</constructor-arg>
		<constructor-arg >
			<value>20</value>
		</constructor-arg>
		<constructor-arg >
			<value>3학년</value>
		</constructor-arg>
		<constructor-arg >
			<value>7반</value>
		</constructor-arg>
	</bean>
	
	<bean id="studentInfo" class="com.ddu.test.StudentInfo">
		<constructor-arg >
			<ref bean="studentDto"/>
		</constructor-arg>
	</bean>
	<bean id="studentInfo2" class="com.ddu.test.StudentInfo">
		<property name="studentDto">
			<ref bean ="studentDto2"></ref>
		</property>
	</bean>
</beans>